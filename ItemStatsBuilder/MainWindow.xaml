<Window x:Class="ItemStatsBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemStatsBuilder"
        mc:Ignorable="d"
        Title="Item Stats Viewer" Height="547" Width="435">
    <Grid>
        <Label x:Name="itemLabel" Content="Item" HorizontalAlignment="Left" Margin="45,29,0,0" VerticalAlignment="Top" Height="26" Width="34"/>
        <ComboBox x:Name="itemCombo" HorizontalAlignment="Left" Margin="72,60,0,0" VerticalAlignment="Top" Width="255" Height="22"/>
        <Label x:Name="desrLabel" Content="Description" HorizontalAlignment="Left" Margin="45,87,0,0" VerticalAlignment="Top" Height="26" Width="90"/>
        <TextBlock x:Name="desrText" HorizontalAlignment="Left" Margin="72,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="120" Width="255"/>
    </Grid>
</Window>
